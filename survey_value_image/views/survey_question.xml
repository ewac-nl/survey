<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="survey_question_form">
        <field name="inherit_id" ref="survey.survey_question_form"/>
        <field name="model">survey.question</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='labels_ids']/tree/field[@name='value']" position="after">
                <field name="value_image" widget="image" height="100px"/>
            </xpath>
            <field name="column_nb" position="after">
                <field name="allow_value_image"
                       attrs="{'invisible': [('type', 'not in', ('simple_choice', 'multiple_choice'))]}"/>
            </field>
        </field>
   </record>
</odoo>
